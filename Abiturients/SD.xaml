<Window x:Class="Abiturients.SelectDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Abiturients"
        mc:Ignorable="d"
        Title="SelectDataWindow" Height="199" Width="272" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="Mark_Select" Text="Прохідний бал" Opacity="0.7" HorizontalAlignment="Center" Margin="0,32,0,0" VerticalAlignment="Top" Width="180" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="School_Select" Text="Назва школи" Opacity="0.7" HorizontalAlignment="Center" VerticalAlignment="Center" Width="180" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button Content="Виконати пошук" HorizontalAlignment="Center" Margin="0,128,0,0" VerticalAlignment="Top" Width="180" Click="Button_Click"/>

    </Grid>
</Window>
